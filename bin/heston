#!/usr/bin/env php

<?php

require_once realpath(__DIR__.'/../vendor/autoload.php');


use Symfony\Component\ClassLoader\UniversalClassLoader;

$loader = new UniversalClassLoader();
$loader->useIncludePath(true);

$loader->registerNamespaces(array(
	'Heston' => __DIR__. '/../src/Heston',
	'Heston\Model' => __DIR__.'/../src/Heston/Model'
));

$loader->register();

use Heston\HestonFacade;

if( isset($argv[1]) && isset($argv[2]) && isset($argv[3]) && isset($argv[4]) )
{
	HestonFacade::upload( $argv[1], $argv[2], $argv[3], $argv[4] );
}
else
{
	help();
}

function help()
{
		echo <<<EOT
\n================= Just Type this ===================\n
php heston [url] [username] [password] [directory to upload] [directory on FTP Server]
\n================= end ===================\n
EOT;
}