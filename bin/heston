#!/usr/bin/env php

<?php

$files = array(
  __DIR__ . '/../vendor/autoload.php',
  __DIR__ . '/../../../autoload.php'
);

foreach ($files as $file) {
  if (file_exists($file)) {
    require $file;
    break;
  }
}

date_default_timezone_set('Asia/Jakarta');

use Heston\HestonFacade;

if( isset($argv[1]) && isset($argv[2]) && isset($argv[3]) && isset($argv[4]) )
{
	HestonFacade::upload( $argv[1], $argv[2], $argv[3], $argv[4] );
}
else
{
	help();
}

function help()
{
		echo <<<EOT
\n================= Just Type this ===================\n
php heston [url] [username] [password] [directory to upload] [directory on FTP Server]
\n================= end ===================\n
EOT;
}